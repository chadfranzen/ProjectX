<div class="playlist panel panel-default">
	<div class="panel-heading">
		{{name}}
		{{#editable}}
		<div class="delete pull-right btn btn-danger">Delete</div>
		<div class="edit pull-right btn btn-warning">Edit</div>
		<a href="../graph/{{username}}/{{encodedName}}" class="find-similar pull-right btn btn-primary">Find Similar</a>
		{{/editable}}
		{{#showSimilar}}
		<a href="../graph/{{username}}/{{encodedName}}" class="find-similar alone pull-right btn btn-primary">Find Similar</a>
		{{/showSimilar}}
	</div>
	<div class="panel-collapse collapse in">
		<div class="panel-body">
			<table class="table table-hover ">
				<thead>
					<tr>
				    <th>#</th>
				    <th>Song</th>
				    <th>Artist</th>
			    	</tr>
				</thead>
				<tbody>
					{{#each songs}}
							<tr>
								<td>{{inc @index}}</td>
								<td><a href="{{this.youtube}}">{{this.name}}</a></td>
								<td>{{this.artist}}</td>
							</tr>
					{{/each}}
				</tbody>
			</table> 
		</div>
	</div>
</div>
